{
  "name": "lms_backend",
  "version": "1.0.0",
  "description": "LMS project",
  "main": "index.ts",
  "license": "MIT",
  "author": "me",
  "keywords": [
    "node",
    "typescript",
    "yarn"
  ],
  "engines": {
    "npm": "8.5.5",
    "node": "16.14.2"
  },
  "scripts": {
    "start": "node build/src/index.js",
    "clean": "rimraf coverage build tmp",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "docs": "apidoc -i src -o apidoc",
    "postdocs": "open-cli coverage/lcov-report/index.html",
    "prebuild": "yarn run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.6.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.4.5",
    "@types/passport-jwt": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "apidoc": "^1.2.0",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "open-cli": "^7.2.0",
    "pinst": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@3.6.1"
}
